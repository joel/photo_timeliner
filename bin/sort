#!/usr/bin/env bash

function exists()
{
  command -v "$1" >/dev/null 2>&1
}

if exists ruby; then
  echo 'ruby exists!' >/dev/null 2>&1
else
  echo 'Your system does not have rbenv installed'
  exit 1
fi

# bin/sort --verbose --source_directory /Volumes/Backup\ Spare/Corrupted\ Images --target_directory /Volumes/My\ Passport\ for\ Mac/Pictures

ruby bin/sort.rb "$@"